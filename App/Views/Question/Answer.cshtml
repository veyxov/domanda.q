@model App.Models.Answer
<body class="bg-light">
    <h1 class="text-center">Answer !</h1>
    @if (!ViewData.ModelState.IsValid)
    {
        <div asp-validation-summary="All" class="alert alert-danger"></div>
    }
    <div class="container">
        <form asp-action="Answer" asp-controller="Question" method="post">
            <textarea asp-for="Heading" class="form-control"> </textarea>
            <textarea asp-for="Text" class="form-control"></textarea>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-success btn-block">Submit answer</button>
            </div>
        </form>
    </div>
</body>

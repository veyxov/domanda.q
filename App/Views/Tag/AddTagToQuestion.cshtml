@model App.Models.Tag
<body class="bg-light">
    @if (!ViewData.ModelState.IsValid)
    {
        <div asp-validation-summary="All" class="alert alert-danger"></div>
    }
     
    <h1>Tag question</h1>
    <hr/>
    <div class="my-3 p-3 bg-white rounded box-shadow border-bottom border-gray">
        <div class="d-flex justify-content-center">
            <form asp-action="AddTagToQuestion" method="post">
                <div class="form-group">
                    <h1><label for="Name">Name</label></h1>
                    <input asp-for="Name" name="name" class="form-inline form-control-lg" />
                </div>
                <div class="form-group">
                    <h1><label for="Description">Description</label></h1>
                    <input asp-for="Description" class="form-inline form-control-lg" />
                </div>
                <button type="submit" class="btn btn-lg btn-block btn-primary">Add tag to question</button>
            </form>
        </div>
    </div>
</body>
